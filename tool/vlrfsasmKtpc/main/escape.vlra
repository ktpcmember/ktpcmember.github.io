
[html symbol escape]
{he.escape A 16; ;
  (?
    (== A "<")
    "&lt;"
    (?
      (== A ">")
      "&gt;"
      (?
        (== A "&")
        "&amp;"
        A
      )
    )
  )
}
{he.compile A; ; (he.compile.loop A (: 0 1))}
{he.compile.loop A 16 B;
  (?
    B
    (?
      (== A "a") "&"
      (?
        (== A "l") "<"
        (? (== A "g") ">" (c.empty))
      )
    )
    (? (== A "&") (c.empty) A)
  );
  (& (| B (== A "&")) (!= A ";"))
}

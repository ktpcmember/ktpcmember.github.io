
{ht.division.caption; ; ('(hc.p (' "本文の内容は、段落群ごとに記述します。" (hx.P (' "vkhc.txt")) "を開いてください。")))}
{ht.division.syntax; ; ('(hc.p (' "段落群の構文は、とても簡単です。1行目に段落群名、2行目以降に空行がないように内容を書きます。空行が現れると段落群は終わりです。そして、空行以降で最初の非空行は、次の段落群の名前と見なされます。")) (hc.p (' "なお、コメント機能はありません。")))}
{ht.division.paragraph; ; ('(hc.p (' "段落群の内容は、" (hx.P (' "vkhc.txt")) "の1行が、HTMLの1段落として扱われます。")) (hc.p (' "ただし、2行目以降について、半角スペース1字" (hx.T (' " ")) "から始まる行は、前の行と同じ段落となります。最初の行をスペースから始めることは禁止します。")) (hc.p (' (hx.TMT (' "段落群の例") (' "&lt;?r;rBlue;概説段落群&gt;\r\nht.something.caption\r\nsomething節の概説です。&lt;?e&gt;\r\n\r\n&lt;?r;rRed;第一項の段落群&gt;\r\nht.something.first\r\nsomething節の第一項の内容です。\r\nこの行は上と独立した段落になります。&lt;?e&gt;\r\n\r\n&lt;?r;rGreen;第二項の段落群&gt;\r\nht.something.second\r\nただし、この第二項には段落が2つしか含まれません。\r\n ここは上の段落に含まれます。\r\n 複数行でも同じです。\r\nここは別の段落となります。&lt;?e&gt;")))))}
{ht.extension.caption; ; ('(hc.p (' "さて、HTMLを扱うからには、単なるテキストファイルより高度な内容を記述したいものです。")))}
{ht.extension.syntax; ; ('(hc.p (' "拡張記法の構文は、vlrfsasmの関数と似ています。実は、内部で呼び出しているのです。")) (hc.p (' "基本的な構文は、" (hx.T (' "[識別子;第一引数;第二引数]")) "です。スペースは区切り文字ではありません。")) (hc.p (' "識別子は、機能ごとに指定されます。vlrfsasmと同様に、大小文字の区別があります。")) (hc.p (' "特殊な場合を除き、入れ子にすることもできます。")) (hc.p (' "引数は多くも少なくもなく、ちょうど決められた数にしてください。")))}
{ht.extension.decoration; ; ('(hc.p (' "全て引数は1つで、装飾対象の文字列を入れます。")) (hc.table (' "装飾記法一覧") "" (' (hc.tr (' (hc.td (' "識別子") "") (hc.td (' "効果") "") (hc.td (' "例") "") (hc.td (' "表示") ""))) (hc.tr (' (hc.td (' "b") "") (hc.td (' "太字") "") (hc.td (' (hx.T (' "[b;A]")) "") "") (hc.td (' (hx.b (' "A")) "") ""))) (hc.tr (' (hc.td (' "i") "") (hc.td (' "斜体") "") (hc.td (' (hx.T (' "[i;B]")) "") "") (hc.td (' (hx.i (' "B")) "") ""))) (hc.tr (' (hc.td (' "o") "") (hc.td (' "上付き線") "") (hc.td (' (hx.T (' "[o;C]")) "") "") (hc.td (' (hx.o (' "C")) "") ""))) (hc.tr (' (hc.td (' "u") "") (hc.td (' "下付き線") "") (hc.td (' (hx.T (' "[u;D]")) "") "") (hc.td (' (hx.u (' "D")) "") ""))) (hc.tr (' (hc.td (' "uRed") "") (hc.td (' "赤下付き線") "") (hc.td (' (hx.T (' "[uRed;E]")) "") "") (hc.td (' (hx.uRed (' "E")) "") ""))) (hc.tr (' (hc.td (' "uBlue") "") (hc.td (' "青下付き線") "") (hc.td (' (hx.T (' "[uBlue;F]")) "") "") (hc.td (' (hx.uBlue (' "F")) "") ""))) (hc.tr (' (hc.td (' "uGreen") "") (hc.td (' "緑下付き線") "") (hc.td (' (hx.T (' "[uGreen;G]")) "") "") (hc.td (' (hx.uGreen (' "G")) "") ""))))))}
{ht.extension.link; ; ('(hc.p (' "識別子" (hx.T (' "l")) "は、引数を2つとります。")) (hc.p (' "第一引数が表示され、クリックすると第二引数のurlを開きます。")) (hc.p (' (hx.TMT (' "トップページへのリンク") (' "[l;トップページ;https://www.ktpc.tokyo/index.html]")))) (hc.p (' "なお、第一引数を空文字列にすることができ、このとき第二引数のurlがそのまま表示されます。")))}
{ht.extension.substitution; ; ('(hc.p (' "数学などでギリシャ文字を使うとき、ASCIIのみで表記出来ると楽です。" "識別子" (hx.T (' "a")) "は、引数を1つとり、対応する1文字を返します。数学の記号なども利用できます。")) (hc.p (' "対応表は、" (hx.l (' "aliasList.txt") (' "https://github.com/ktpcmember/ktpcmember.github.io/blob/master/tool/vlrfsasmKtpc/main/aliasList.txt")) "にあります。必要ならば、衝突に気をつけて追加してください。")) (hc.p (' "なお、ギリシャ文字や記号が2文字以上必要な場合には、スペース" (hx.T (' " ")) "区切りで指定すればよいです。")) (hc.table (' "例") (' "tXC") (' (hc.tr (' (hc.td (' (hx.T (' "[a;Th h t a]")) "") "") (hc.td (' (hx.a (' "Th h t a")) "") ""))))))}